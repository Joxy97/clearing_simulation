{
  "seed": 123,
  "model": {
    "run_folder": "models/run_1",
    "device": "auto"
  },
  "data": {
    "source": "sp500",
    "data_dir": null,
    "train_ratio": 0.8,
    "K_v": 4,
    "K_c": 4,
    "loss_percentiles": [0.0, 0.01, 0.05, 0.10, 0.25, 0.40, 0.60],
    "limit_instruments": 5
  },
  "simulation": {
    "n_days": 100,
    "scenarios_per_day": 1000,
    "burn_in": 500,
    "thin": 10,
    "alpha": 0.99,
    "lambda_client": 10.0,
    "lambda_cm": 10.0,
    "trade_value_scale": 1.0,
    "min_trade_abs": 1e-6,
    "max_trades_per_client": 30,
    "state_index_strategy": "random",
    "init_scenarios": 1000,
    "liquidate_on_default": true,
    "cm_absorbs_shortfall": true,
    "allow_trade_topups": true
  },
  "clearing_members": {
    "CM": {"n_clients": 1, "cm_funds": 10000.0}
  },
  "ccps": {
    "CCP": {"instrument_indices": "all", "default_fund": 100000.0}
  },
  "output": {
    "path": "outputs/metrics.json",
    "include_details": true,
    "include_portfolios": true,
    "include_scenarios": true,
    "include_returns": true
  }
}
